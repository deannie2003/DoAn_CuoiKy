<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/day"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/place"
            android:text="BIEN HOA CITY"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loz"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place"
            tools:ignore="MissingConstraints">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="@+id/loz"
            app:layout_constraintTop_toBottomOf="@+id/loz"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/Desciption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_cloud_24"
                android:gravity="center"
                android:text="few cloud"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loz"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/nhietdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"


                android:text="40"
                android:textColor="@color/white"
                android:textSize="95sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calender"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Sunrise_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/weather_backgr"
            app:layout_constraintStart_toStartOf="@+id/first_layout"
            app:layout_constraintTop_toBottomOf="@+id/first_layout"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sunrises"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sunrise"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/Sunrise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50"
                    android:textSize="60sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Sunset_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/weather_backgr"
            app:layout_constraintStart_toStartOf="@+id/Sunrise_layout"
            app:layout_constraintTop_toBottomOf="@+id/Sunrise_layout"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sunsets"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sunrise"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/Sunset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50"
                    android:textSize="60sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/humidity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/weather_backgr"
            app:layout_constraintStart_toStartOf="@+id/Sunset_layout"
            app:layout_constraintTop_toBottomOf="@+id/Sunset_layout"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/humidity_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/humidity"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Humandity (%)"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/doam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50"
                    android:textSize="60sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pressure_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/weather_backgr"
            app:layout_constraintStart_toStartOf="@+id/humidity_layout"
            app:layout_constraintTop_toBottomOf="@+id/humidity_layout"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pressure_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/pressure"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pressure (ATM)"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/apsuat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50"
                    android:textSize="60sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wind_direction_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/weather_backgr"
            app:layout_constraintStart_toStartOf="@+id/pressure_layout"
            app:layout_constraintTop_toBottomOf="@+id/pressure_layout"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wind_direction_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/wind_direction"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/wind_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Wind Direction"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/huongio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50"
                    android:textSize="60sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wind_speed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/weather_backgr"
            app:layout_constraintStart_toStartOf="@+id/wind_direction_layout"
            app:layout_constraintTop_toBottomOf="@+id/wind_direction_layout"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wind_speed_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/wind_speed"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/wind_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Wind Speed (km/h)"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50"
                    android:id="@+id/tocdogio"
                    android:textSize="60sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>