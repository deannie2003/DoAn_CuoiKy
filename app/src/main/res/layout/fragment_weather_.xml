<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/weather_frg_background"
    tools:context=".Weather_Fragment">
    <TextView
        android:id="@+id/hi_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/baseline_person_24"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <LinearLayout
        android:background="@drawable/dash_board_background"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hi_user"
        android:id="@+id/ln1">
        <ImageView
            android:id="@+id/cloud"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/cloud_moon"
            android:alpha="0.8"
            android:layout_below="@+id/hi_user"

            />

        <RelativeLayout
            android:id="@+id/lo"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_below="@+id/hi_user"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/cloud">

            <TextView
                android:id="@+id/calender"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:text="Wednesday"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/heat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calender"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="28dp"
                android:gravity="center"
                android:text="27Â°C"
                android:textColor="@color/black"
                android:textSize="40sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_below="@+id/ln1">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/dash_board_background"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/time_sunrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sunrise"
                    android:textColor="@color/black"
                    android:text="Wind Speed"

                    android:textStyle="bold" />

                <ImageView

                    android:id="@+id/img_sunrise"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/time_sunrise"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/wind_speed" />
                <TextView
                    android:id="@+id/time_sunrisees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sunrise"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:text="11 km/h"

                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/time_sunset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Speed Direction"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_sunset"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/wind_direction" />
                <TextView
                    android:id="@+id/time_sunrisee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sunrise"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:text="11 km/h"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_below="@+id/sun"
        android:layout_marginStart="20dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/dash_board_background"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/rain_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/baseline_water_drop_24"
            android:textColor="@color/black"
            android:text="RAIN/ALL" />

        <TextView
            android:id="@+id/num_rain_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rain_all"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/num_rain_all"
            android:layout_centerInParent="true"
            android:layout_marginTop="10sp"
            android:text="mm"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>