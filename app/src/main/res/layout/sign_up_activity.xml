<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gground"
    tools:context=".sign_up_activity" >

    <TextView
        android:id="@+id/registerTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="4dp"
        android:text="SIGN UP"
        android:textColor="#0c58ab"
        android:textColorHighlight="@color/accent_color"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/usernameEditTxt"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/edit_text_border"
        android:drawableStart="@drawable/name"
        android:drawablePadding="16dp"
        android:ems="10"
        android:fadeScrollbars="false"
        android:hint="Username"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="#0c58ab"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="186dp" />

    <EditText
        android:id="@+id/emailEditTxt"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="286dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/edit_text_border"
        android:drawableStart="@drawable/email"
        android:drawablePadding="16dp"
        android:ems="10"
        android:fadeScrollbars="false"
        android:hint="Email"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="#0c58ab"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="186dp" />

    <EditText
        android:id="@+id/passwordEditTxt"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="286dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="286dp"
        android:background="@drawable/edit_text_border"
        android:drawableStart="@drawable/password"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="#0c58ab"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEditTxt"
        tools:layout_editor_absoluteY="186dp" />

    <EditText
        android:id="@+id/reenterPassEditTxt"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="286dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="195dp"
        android:background="@drawable/edit_text_border"
        android:drawableStart="@drawable/password"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="#0c58ab"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditTxt" />

    <Button
        android:id="@+id/button_homepage"
        android:layout_width="160dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="615dp"
        android:layout_marginEnd="248dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/edit_text_border"
        android:padding="15dp"
        android:text="BACK"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="605dp" />


    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="160dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="615dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="248dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/edit_text_border"
        android:padding="15dp"
        android:text="SIGN UP"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearance="?attr/shapeAppearanceCornerMedium"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="605dp" />

    <ImageButton
        android:id="@+id/imgChange"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="false"
        android:src="@drawable/ic_settings_24dp"
        app:iconSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

        <Button
            android:id="@+id/button_homepage"
            android:layout_width="160dp"
            android:layout_height="73dp"

            android:layout_marginStart="36dp"
            android:layout_marginTop="76dp"

            android:layout_below="@id/reenterPassEditTxt"
            android:background="@drawable/edit_text_border"
            android:layout_marginLeft="30dp"
            android:padding="15dp"
            android:text="BACK"
            android:textSize="20sp"/>



</RelativeLayout>
