<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#00BFFF" />
    <corners android:radius="50dp" /> <!-- Sử dụng giá trị bán kính lớn hơn nếu cần -->

    <size
        android:width="100dp"
        android:height="50dp" />

    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Màu viền và độ rộng viền -->

    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp" />

    <bitmap
        android:src="@drawable/sun" />
</shape>
