<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng đổ -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50000000"/> <!-- Màu bóng đổ -->
            <corners android:radius="4dp"/> <!-- Bán kính góc -->
        </shape>
    </item>
    <!-- Background cho TextView -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Màu nền -->
            <corners android:radius="4dp"/> <!-- Bán kính góc -->
        </shape>
    </item>
</layer-list>
